<form action="/figures" method="POST">
  <label for="name">Name</label>
  <input type="text" id="figure_name" name="figure[name]">
  <br></br>

  Landmarks:-<br>
  <% @landmarks.each do |l| %>
    <label><%= l.name %></label>
    <input  type="checkbox"
            name="figure[landmark_ids][]"
            value="<%= l.id %>" id="landmark_<%= l.id %>">
  <% end %>
  <br></br>

  New landmark: <input  type="text"
                        id="new_landmark"
                        name="landmark[name]">
                        <br></br>

  Year Completed: <input  type="text"
                          id="new_landmark_year"
                          name="landmark[year_completed]">
                          <br></br>

  Titles:-<br>
  <% @titles.each do |t| %>
    <label><%= t.name %></label>
    <input  type="checkbox"
            name="figure[title_ids][]"
            value="<%= t.id %>" id="title_<%= t.id %>">
  <% end %>
  <br></br>

  New title: <input type="text" id="new_title" name="title[name]">
  <br></br>

  <input type="submit" value="Create New Figure">
</form>
